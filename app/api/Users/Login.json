{
  "meta": {
    "options": {
      "linkedFile": "/views/login.ejs",
      "linkedForm": "loginForm"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "username",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "username"
      },
      {
        "type": "text",
        "fieldName": "password",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "password"
      }
    ],
    "$_SERVER": [
      {
        "type": "text",
        "name": "REMOTE_ADDR"
      }
    ]
  },
  "exec": {
    "steps": [
      "SecurityProviders/security",
      {
        "name": "identity",
        "module": "auth",
        "action": "login",
        "options": {
          "provider": "security"
        },
        "output": true,
        "meta": []
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{identity}}",
          "then": {
            "steps": {
              "name": "UserLog",
              "module": "dbupdater",
              "action": "insert",
              "options": {
                "connection": "FoodApp",
                "sql": {
                  "type": "insert",
                  "values": [
                    {
                      "table": "t_user_log",
                      "column": "user_id",
                      "type": "number",
                      "value": "{{identity}}"
                    },
                    {
                      "table": "t_user_log",
                      "column": "ip_address",
                      "type": "text",
                      "value": "{{$_SERVER.REMOTE_ADDR}}"
                    },
                    {
                      "table": "t_user_log",
                      "column": "login_time",
                      "type": "datetime",
                      "value": "{{NOW}}"
                    },
                    {
                      "table": "t_user_log",
                      "column": "login_from",
                      "type": "text",
                      "value": "{{'Web'}}"
                    },
                    {
                      "table": "t_user_log",
                      "column": "remote_ip",
                      "type": "text",
                      "value": "{{$_SERVER.REMOTE_ADDR}}"
                    }
                  ],
                  "table": "t_user_log",
                  "returning": "id",
                  "query": "INSERT INTO t_user_log\n(user_id, ip_address, login_time, login_from, remote_ip) VALUES (:P1 /* {{identity}} */, :P2 /* {{$_SERVER.REMOTE_ADDR}} */, :P3 /* {{NOW}} */, :P4 /* {{'Web'}} */, :P5 /* {{$_SERVER.REMOTE_ADDR}} */)",
                  "params": [
                    {
                      "name": ":P1",
                      "type": "expression",
                      "value": "{{identity}}"
                    },
                    {
                      "name": ":P2",
                      "type": "expression",
                      "value": "{{$_SERVER.REMOTE_ADDR}}"
                    },
                    {
                      "name": ":P3",
                      "type": "expression",
                      "value": "{{NOW}}"
                    },
                    {
                      "name": ":P4",
                      "type": "expression",
                      "value": "{{'Web'}}"
                    },
                    {
                      "name": ":P5",
                      "type": "expression",
                      "value": "{{$_SERVER.REMOTE_ADDR}}"
                    }
                  ]
                }
              },
              "meta": [
                {
                  "name": "identity",
                  "type": "text"
                },
                {
                  "name": "affected",
                  "type": "number"
                }
              ]
            }
          }
        },
        "outputType": "boolean"
      }
    ]
  }
}