<meta name="ac:route" content="/user-view">
<dmx-query-manager id="qm"></dmx-query-manager>
<dmx-serverconnect id="scPostalCode" url="/api/UniversalAPI/PostalCode" dmx-param:pincode="modalAddUsers.scformAddUser.pin.value" noload></dmx-serverconnect>
<dmx-serverconnect id="scUserType" url="/api/Users/GetUserType"></dmx-serverconnect>
<dmx-serverconnect id="scUserList" url="/api/Users/UsersList" dmx-param:user_type="user_type_select.value" dmx-param:offset="qm.data.offset" dmx-param:limit="10" dmx-param:sort="qm.data.sort" dmx-param:dir="qm.data.dir" dmx-param:search_value="formSearch.SearchValue.value.titlecase()"></dmx-serverconnect>
<dmx-data-view id="dvUserList" dmx-bind:data="content.scUserList.data.FetchUsers.data"></dmx-data-view>
<dmx-data-detail id="ddUserList" dmx-bind:data="content.dvUserList.data" key="id"></dmx-data-detail>
<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-8 col-md-8 col-sm-8 col-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon nalika-home"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>User List</h2>
                                    <p>Customers:<span class="bread-ntd">500</span>&emsp;Restaurants:<span class="bread-ntd">20</span>&emsp; Delivery Person:<span class="bread-ntd">10</span>&emsp; CC:<span class="bread-ntd">02</span>&emsp; Manager:<span class="bread-ntd">1</span>&emsp; Admin:<span class="bread-ntd">1</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-12">
                            <div class="breadcomb-report">
                                <select class="form-control pro-edt-select form-control-primary" type="text" id="user_type_select" dmx-bind:options="scUserType.data.UserTypeList.data" optiontext="type_name+' ('+type_code+')'" optionvalue="id" dmx-bind:value="6">
