<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="market" appConnect="local" components="{dmxBootstrap5Navigation:{},dmxBootstrap5TableGenerator:{}}" -->
<meta name="ac:route" content="/market">
<dmx-serverconnect id="scMarketPlace" url="/api/Location/MarketList"></dmx-serverconnect>

<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon nalika-home"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Market List</h2>
                                    <p>Total:<span class="bread-ntd panel-heading" dmx-text="content.scMarketPlace.data.ActiveMarkets.length"></span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>All Market List</h4>
                    <div class="breadcome-heading">
                        <form role="search" class="" id="formSearch">
                            <input type="text" placeholder="Search..." class="form-control" id="SearchValue">
                            <a href="" style="    top: 80px;"><i class="fa fa-search"></i></a>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name English</th>
                                    <th>Name Bengali</th>
                                    <th>Name Hindi</th>
                                    <th>Market Code</th>
                                    <th>Market PIN</th>
                                    <th>Longitude</th>
                                    <th>Latitude</th>
                                </tr>
                            </thead>
                            <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="scMarketPlace.data.ActiveMarkets" id="tableRepeat2">
                                <tr>
                                    <td dmx-text="id"></td>
                                    <td dmx-text="market_name_en"></td>
                                    <td dmx-text="market_name_bn"></td>
                                    <td dmx-text="market_name_hin"></td>
                                    <td dmx-text="market_code"></td>
                                    <td dmx-text="market_pin"></td>
                                    <td dmx-text="longitude"></td>
                                    <td dmx-text="latitude"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="text-light" dmx-show="content.scMarketPlace.data.ActiveMarkets.length==0">
                        <p class="text-center fa-2x text-warning">
                            No record Found!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>